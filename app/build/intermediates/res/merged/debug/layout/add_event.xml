<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blueback"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/main_event_details">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:padding="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/back_button_add_view"
            android:src="@mipmap/left222"
            android:background="#00000000"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add an Event"
            android:id="@+id/textView3"
            android:typeface="sans"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:textColor="#000000" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/add_event_button"
            android:src="@mipmap/addbutton"
            android:background="#00000000"
            android:paddingRight="5dp"
            android:clickable="true"
            android:onClick="onClick" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/list_event_button"

            android:background="#00000000"
            android:src="@mipmap/list"
            android:clickable="true"
            android:onClick="onClick" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/calendar_event_button"
            android:src="@mipmap/monthpic"
            android:background="#00000000"
            android:clickable="true"
            android:onClick="onClick" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/weekly_view_button"
            android:src="@mipmap/weekpic"
            android:background="#00000000" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:clickable="true"
            android:onClick="onClick"
            android:id="@+id/daily_view_button"
            android:background="#00000000"
            android:src="@mipmap/calendaricon" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />





        <ImageButton
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/add_event_button"
            android:background="#00000000"
            android:src="@mipmap/addicon"
            android:clickable="true" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />
        #other buttons TODO

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#80FFFFFF"
        android:weightSum="1"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name: "
                android:id="@+id/nameTextView"
                android:padding="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_edit_text"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date: "
                android:id="@+id/dateTextView"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Click To Choose A Date"
                android:id="@+id/date_picked"
                android:padding="2dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:textColor="#1abc9c" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Time: "
                android:id="@+id/textView5"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Start Time"
                android:id="@+id/start_time_picked"
                android:padding="2dp"
                android:layout_marginRight="15dp"
                android:clickable="true"
                android:textColor="#1abc9c" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="to"
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="End Time"
                android:id="@+id/end_time_picked"
                android:padding="2dp"
                android:clickable="true"
                android:textColor="#1abc9c"
                android:layout_marginLeft="15dp"
                android:onClick="onClick" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Location:"
                android:id="@+id/event_location"
                android:padding="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loc_edit_text"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description:"
                android:id="@+id/event_description"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desc_edit_text"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:id="@+id/emerald_button"
                android:background="#00000000"
                android:src="@mipmap/emerald"
                android:clickable="true"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:id="@+id/pumpkin_button"
                android:background="#00000000"
                android:src="@mipmap/pumkin"
                android:clickable="true"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:id="@+id/peter_river_button"
                android:src="@mipmap/peterriver"
                android:background="#00000000"
                android:clickable="true"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:id="@+id/sunflower_button"
                android:background="#00000000"
                android:src="@mipmap/sunflower"
                android:clickable="true"
                android:onClick="onClick" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:id="@+id/turquoise_button"
                android:src="@mipmap/turquoise"
                android:background="#00000000"
                android:clickable="true"
                android:onClick="onClick" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Color Chosen is:"
                android:id="@+id/colorChoseText"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:id="@+id/color_chosen_image"
                android:background="#00000000"
                android:layout_marginLeft="25dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout><!-- From: file:/F:/Dropbox/calendar_app/app/src/main/res/layout/add_event.xml -->